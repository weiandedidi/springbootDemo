<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qidi.bootdemo.dao.user.UserDao">

    <resultMap id="userResultMap" type="com.qidi.bootdemo.model.user.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pwd" column="pwd"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.qidi.bootdemo.model.user.User">
        insert into user
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="pwd != null">pwd,</if>
        </trim>
        values
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="pwd != null">#{pwd},</if>
        </trim>
    </insert>

    <update id="update" parameterType="com.qidi.bootdemo.model.user.User">
        update user
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="pwd != null">pwd=#{pwd},</if>
        </set>
        where id=#{id}
    </update>

    <select id="getUserById" parameterType="int" resultMap="userResultMap">
		select * from user
		where ID=#{id} 
	</select>

    <select id="countUser" parameterType="map" resultType="int">
        select count(*) from user
        <include refid="queryCondition"/>
    </select>

    <select id="getUserList" parameterType="map" resultMap="userResultMap">
        select * from user
        <include refid="queryCondition"/>
        <if test="start != null and limit != null">
            limit #{start},#{limit}
        </if>
    </select>

    <sql id="queryCondition">
        <where>
            <if test="id != null">id=#{id}</if>
            <if test="name != null">and name=#{name}</if>
            <if test="pwd != null">and pwd=#{pwd}</if>
        </where>
    </sql>

</mapper>